# Email Configuration
# For Gmail, use an App Password: https://myaccount.google.com/apppasswords
# For other email services, update accordingly

# Email Service Credentials
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Application Settings
NODE_ENV=development
PORT=3000
DATABASE_URL=mysql://root:@localhost:3306/gamified-app

# Session Secret (change this to a random string in production!)
SESSION_SECRET=xianfire-secret-key-change-in-production

# Database Settings
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=gamified-app
DB_PORT=3306

# Email Notifications (true/false)
SEND_EMAIL_NOTIFICATIONS=true
SEND_DAILY_DIGEST=false

# Social Features
ENABLE_LEADERBOARDS=true
ENABLE_FRIENDS=true
ENABLE_SOCIAL_SHARING=true
